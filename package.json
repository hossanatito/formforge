{
  "name": "formforge",
  "version": "1.0.0",
  "description": "FormForge - PHP Form Generator for JVZoo and WarriorPlus",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"next dev --turbopack\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "next build && electron-builder",
    "start": "next start",
    "electron": "electron .",
    "package:win": "next build && electron-builder --win"
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "build": {
    "appId": "com.formforge.phpgenerator",
    "productName": "FormForge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "next": "^15.5.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.2",
    "electron-store": "^10.1.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "class-variance-authority": "^0.7.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "lucide-react": "^0.561.0"
  },
  "devDependencies": {
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "concurrently": "^9.1.0",
    "wait-on": "^8.0.5",
    "typescript": "^5.7.2",
    "@types/react": "^19.0.1",
    "@types/node": "^22.19.3",
    "tailwindcss": "^3.4.19",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20"
  }
}